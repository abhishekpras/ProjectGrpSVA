@model List<ProjectGrpSVA.Models.Output1>
@using GridMvc.Html
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section css {
    <link href="@Url.Content("~/Content/Gridmvc.css")" rel="stylesheet" type="text/css" />
}

<div>
    <section>
        @using (Html.BeginForm("MarketBasketAnalysis", "Home", FormMethod.Post))
        {
            <label for="fInput">Enter 1st Item</label> <br />
            <input type="text" name="input_1" value="sugar" /><br />
            <label for="sInput">Enter 2nd Item</label> <br />
            <input type="text" name="input_2" value="butter" /><br />
            <br />
            <input type="submit" name="Enter" style="text-align:center" /><br />

        }
    </section>
</div>

<div>
    @Html.Grid(Model.OrderByDescending(m => m.lift).OrderByDescending(m => m.confidence)).AutoGenerateColumns().Sortable().Filterable().WithPaging(5)
</div>

@section Scripts {
    <script src="@Url.Content("~/Scripts/gridmvc.min.js")" type="text/javascript"></script>
}