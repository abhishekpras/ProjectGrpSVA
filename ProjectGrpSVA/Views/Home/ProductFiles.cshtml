@model IEnumerable<ProjectGrpSVA.Models.ProductDisplay>
@using GridMvc.Html
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section css {
    <link href="@Url.Content("~/Content/Gridmvc.css")" rel="stylesheet" type="text/css" />
}
<h2>Product Data</h2>


<div class="col-md-12">
    <label />
</div>

<div>
    @Html.Grid(Model).AutoGenerateColumns().Sortable().Filterable().WithPaging(5)
</div>

<div class="col-md-12">
    <label />
</div>
<div class="col-md-12">
    @using (Html.BeginForm("uploadProductCsv", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
    <div class="form-group">
        <label for="attachment">Add for More Products (CSV File only)</label>
        <label class="btn btn-default btn-file">
            <input type="file" name="attachmentcsv" id="attachmentcsv" hidden>
        </label>
        <button type="submit" class="btn btn-primary">Upload</button>
    </div>
        
    }
</div>


@section Scripts {
    <script src="@Url.Content("~/Scripts/gridmvc.min.js")" type="text/javascript"></script>
}