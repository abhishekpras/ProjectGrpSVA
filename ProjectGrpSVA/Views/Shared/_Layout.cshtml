<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>DataChatter | Welcome</title>

    <link rel="stylesheet" href="~/Content/bootstrap.css" />
    <link rel="stylesheet" href="~/Content/Site.css" />
    @RenderSection("css", required: false)
</head>
<body>

    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">Data Chatter Data Analytics in Retail</a>
            </div>
            <div class="navbar-collapse collapse" id=".navbar-collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Exploratory Analysis<span class="caret"></span></a>
                        <ul class="dropdown-menu multi-level" role="menu" aria-labelledby="dropdownMenu">

                            <li class="divider"></li>
                            <li class="dropdown-submenu">
                                <a tabindex="-1" href="#">Product Analysis</a>
                                <ul class="dropdown-menu">
                                    <li>@Html.ActionLink("Bestsellers", "Bestsellers", "Home")</li>
                                    <li>@Html.ActionLink("Organic/Non-organic", "OrganicVsNonOrganic", "Home")</li>
                                    <li>@Html.ActionLink("Reordering", "ReOrganicVsNonOrganic", "Home")</li>
                                </ul>
                            </li>
                            <li class="divider"></li>
                            <li class="dropdown-submenu">
                                <a tabindex="-1" href="#">Time of Purchase</a>
                                <ul class="dropdown-menu">
                                    <li>@Html.ActionLink("Hour of Day", "HourOfDay", "Home")</li>
                                    <li>@Html.ActionLink("Day of Week", "DayOfWeek", "Home")</li>
                                    <li>@Html.ActionLink("Reorder", "DaySincePriorOrder", "Home")</li>
                                </ul>
                            </li>
                            <li class="divider"></li>
                            <li class="dropdown-submenu">
                                <a tabindex="-1" href="#">Order Analysis</a>
                                <ul class="dropdown-menu">
                                    <li>@Html.ActionLink("New Order/Reorder", "NewOrderVsReorder", "Home")</li>
                                    <li>@Html.ActionLink("Most often reordered", "MostOftenReordered", "Home")</li>
                                    <li>@Html.ActionLink("Item on Cart First", "ItemOnCartFirst", "Home")</li>
                                </ul>
                            </li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Analytics<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Market Basket Analysis", "MarketBasketAnalysis", "Home")</li>
                            <li>@Html.ActionLink("Income Prediction", "IncomePrediction", "Home")</li>                            
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Repository<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Aisle Data", "UploadFiles", "Home")</li>
                            <li>@Html.ActionLink("Department Data", "DepartmentFiles", "Home")</li>
                            <li>@Html.ActionLink("Product Data", "ProductFiles", "Home")</li>
                            <li>@Html.ActionLink("Order Data", "OrderFiles", "Home")</li>
                            <li>@Html.ActionLink("Order+Product Data", "OrderProductFiles", "Home")</li>
                        </ul>
                    </li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; MS BAIS @DateTime.Now.Year Team - Soumyajit, Vishal, Abhishek</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    @RenderSection("scripts", required: false)

</body>
</html>